<div class="row">
    <div class="small-offset-4 small-8 small-centered columns text-center">
        <h1 class="page-title">Cupcake Pricer</h1>
    </div>
</div>

<div class="row">
  <div class="small-4 columns">
      <ul class='price-list'>
          {{#each item in items}}
              <li>
                  <div class="switch my-switch">
                      {{input type="checkbox" disabled=item.required checked=item.selected id=item.label}}
                      <label class="checkbox-slider" {{bind-attr for=item.label}}></label>
                      <span class="checkbox-label" style="color: {{unbound item.data.firstObject.color}}">{{item.label}}</span>
                  </div>
              </li>
              <!-- <li>{{!input type="checkbox" disabled=item.required checked=item.selected}}<span class="checkbox-label">{{!item.label}}</span></li> -->
          {{/each}}
      </ul>
  </div>
  <div class="small-8 columns">
      <div id="content">
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="100%" height="50%"
             viewBox="0 0 1200 1200" preserveAspectRation="xMinyMin">
              {{#each items}}
                {{item-component item=this toggleSelection="toggleComponentSelection"}}
              {{/each}}
          </svg>
          {{price-chart items=items}}
      </div>
  </div>
</div>
<div class="row">
  <div class="small-offset-4 small-8 columns">
  </div>
</div>